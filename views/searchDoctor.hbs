<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <!-- Google Fonts -->
    <!-- font-family: 'Montserrat', sans-serif; -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
        rel="stylesheet">
    <title>Adhero Search Doctors</title>
    <!-- CSS -->
    <link rel="stylesheet" href="/css/index.css">
    <link rel="stylesheet" href="/css/searchDoctor.css">
</head>

<body>
    <!-- Navbar -->
    <nav class=" navbar navbar-expand-lg navbar-light">
        <div class="container">
            <a class="navbar-brand" href="/">
                <img src="/images/logo-large.png" style="height:100px; width:100px;" alt="brand-logo">
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active" href="./searchDoctor.html">Search Doctors</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="./viewBookings.html">View Bookings</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" href="/">Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Page Title -->
        {{#if message}}
            <h4 class='alert {{messageClass}} mt-4'>{{message}}</h4>
        {{/if}}
    <header class="banner">
        <h1 class="banner-text">Find Nearest</h1>
        <h1 class="banner-text" id="doc-type">Doctors</h1>

        <div class="col-md-4">

            <form class="row g-3 needs-validation" action="/auth/searchDoctor" method="POST"
                input="mySignupValidator()" novalidate>

                <div class="ms-4 col-md-8 mt-5">

                    <select class="form-select" data-live-search="true" id="specialization" name="specialization"
                        required>
                        <option selected value="None">None</option>
                        <option>Ayurvedic Medicine</option>
                        <option>Anaesthesiology</option>
                        <option>Biochemistry</option>
                        <option>Community Health</option>
                        <option>Cardiology</option>
                        <option>Dentist</option>
                        <option>Dermatology</option>
                        <option>Emergency and Critical care</option>
                        <option>Endocrinology</option>
                        <option>ENT</option>
                        <option>Family Medicine</option>
                        <option>Forensic Medicine</option>
                        <option>Gastroenterology</option>
                        <option>General Medicine</option>
                        <option>General Surgery</option>
                        <option>Gynaecology</option>
                        <option>Haematology</option>
                        <option>Homeopathic Medicine</option>
                        <option>Microbiology</option>
                        <option>Obsetrics</option>
                        <option>Opthalmology</option>
                        <option>Orthopaedics</option>
                        <option>Paediatrics</option>
                        <option>Palliative Medicine</option>
                        <option>Pathology</option>
                        <option>Pulmonary</option>
                        <option>Skin and Venereal diseases</option>
                        <option>Pharmacology</option>
                        <option>Physical Medicine and Rehabilitation</option>
                        <option>Physiology</option>
                        <option>Preventive and Social Medicine</option>
                        <option>Psychiatry</option>
                        <option>Radio-Diagnosis</option>
                        <option>Tuberculosis and Respiratory diseases</option>
                        <option>Unani Medicine</option>
                        <option>Neurology</option>
                        <option>Nuclear Medicine</option>
                        <option>Transfusion Medicine</option>
                        <option>Tropical Medicine</option>
                    </select>
                    <div class="invalid-feedback">
                        Please select a valid Specialization.
                    </div>
                </div>

                <div class="col-md-3 ms-3 mt-5">
                    <button class="btn btn-warning" type="submit">Find</button>
                </div>

            </form>

        </div>
    </header>
    <!-- Custom JS -->
    <script>
        const showDocType = () => {
            this.doctypes = new Array(
                "Dentist",
                "ENT Specialist",
                "Gynaecologist",
                "Paediatrician",
                "Pulmonologist"
            );
            const doctypeContainer = document.getElementById("doc-type");

            // console.log(doctypeContainer.innerText);
            var i = 0;
            setInterval(() => {
                if (i < this.doctypes.length) {
                    const j = i;
                    i += 1;
                    doctypeContainer.innerText = (this.doctypes[j]);
                } else {
                    i = 0;
                    doctypeContainer.innerText = this.doctypes[0];
                }
            }, 1000);
        };

        showDocType();
    </script>
    <!-- Bootstrap 5 : JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous">
        </script>
</body>

</html>